<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maintenance</title>
    <link rel="stylesheet" href="/style/maintaince.css">
    
</head>
<body>
    <header>
        <h1>Housekeeping</h1>
        <a href="index.html" class="home-button">Home</a>
    </header>

    <div class="maintenance-container">
        <div class="maintenance-item">
            <h2>Membership</h2>
            <div class="button-group">
                <a href="#" class="button" onclick="showModal('membershipModal')" >Add</a>
                <a href="#" class="button">Update</a>
            </div>
               
        </div>

        <div class="maintenance-item">
            <h2>Books/Movies</h2>
            <div class="button-group">
                <a href="#" class="button" onclick="showModal('bookMovieModal')">Add</a>
                <a href="#" class="button">Update</a>
            </div>
        </div>

        <div class="maintenance-item">
            <h2>User Management</h2>
            <div class="button-group">
                <a href="#" class="button">Add</a>
                <a href="#" class="button">Update</a>
            </div>
        </div>
    </div>

    <!-- Logout Button -->
    <div class="logout-container">
        <a href="#" class="logout-button">Logout</a>
    </div>

    <div id="bookMovieModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal('bookMovieModal')">&times;</span>
            <h2>Add Books/Movies</h2>
            <form>
                <label>Type:</label>
                <input type="radio" id="books" name="type" value="Books" required>
                <label for="books">Books</label>
                <input type="radio" id="movies" name="type" value="Movies">
                <label for="movies">Movies</label>

                <label for="itemName">Books/Movies Name:</label>
                <input type="text" id="itemName" name="itemName" required>

                <label for="procurementDate">Date of Procurement:</label>
                <input type="date" id="procurementDate" name="procurementDate" required>

                <label for="quantity">Quantity/Copies:</label>
                <input type="text" id="quantity" name="quantity" required>
  
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>

    <div id="membershipModal " class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal('membershipModal')">&times;</span>
            <h2>Add Membership</h2>
            <form>
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" required>
                
                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" required>
                
                <label for="contactNumber">Contact Number:</label>
                <input type="text" id="contactNumber" name="contactNumber" required>
                
                <label for="address">Contact Address:</label>
                <input type="text" id="address" name="address" required>
                
                <label for="adharNumber">Aadhar Card Number:</label>
                <input type="text" id="adharNumber" name="adharNumber" required>

                <label for="startDate">Start Date:</label>
                <input type="date" id="startDate" name="startDate" required>
                
                <label for="endDate">End Date:</label>
                <input type="date" id="endDate" name="endDate" required>
                
                <label>Membership Duration:</label>
                <input type="radio" id="sixMonths" name="duration" value="6 months" required>
                <label for="sixMonths">6 Months</label>
                <input type="radio" id="oneYear" name="duration" value="1 year">
                <label for="oneYear">1 Year</label>
                <input type="radio" id="twoYears" name="duration" value="2 years">
                <label for="twoYears">2 Years</label>

                <button type="submit">Submit</button>
            </form>
        </div> 
    </div> 
    <script src="/javascript/maintainance.js"></script>
</body>
</html>
